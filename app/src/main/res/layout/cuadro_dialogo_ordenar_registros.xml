<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="10dp">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_fileName="ordenar.json"
        app:lottie_autoPlay="true"/>

    <!--Nuevos-->
    <Button
        android:id="@+id/Btn_Nuevos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginTop="15dp"
        android:text="@string/Btn_Nuevos"/>
    <!--Pasados-->
    <Button
        android:id="@+id/Btn_Pasados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginTop="15dp"
        android:text="@string/Btn_Antiguos"
        />
    <!--Asc-->
    <Button
        android:id="@+id/Btn_Asc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginTop="15dp"
        android:text="@string/Btn_Asc"/>
    <!--Des-->
    <Button
        android:id="@+id/Btn_Des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginTop="15dp"
        android:text="@string/Btn_Des"/>

</androidx.appcompat.widget.LinearLayoutCompat>